{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "cargo build --release"
    },
    {
      "label": "run",
      "dependsOn": ["debug-clean"],
      "type": "shell",
      "command": "cargo run"
    },
    {
      "label": "format",
      "type": "shell",
      "command": "cargo fmt"
    },
    {
      "label": "lint",
      "type": "shell",
      "command": "cargo clippy"
    },
    {
      "label": "test",
      "type": "shell",
      "command": "cargo test"
    },
    {
      "label": "debug-clean",
      "type": "shell",
      "command": "rm target/debug/rs-tressfx.exe ; rm target/debug/rs-tressfx.d ; rm target/debug/rs_tressfx.pdb ; echo 'cleaned!'"
    }
  ]
}
